<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DirectionsSettings">

    <Button
        android:id="@+id/detailed_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="76dp"
        android:text="Detailed Directions"
        android:onClick="setDetailed"
        app:layout_constraintBottom_toTopOf="@+id/brief_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/brief_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="127dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="381dp"
        android:text="Brief Directions"
        android:onClick="setBrief"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailed_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>